@page
@model MyIdentity.Areas.Admin.Pages.Roles.AddModel
@{
    var btnText = Model.IsUpdate ? "Update" : "Add";
    var title = Model.IsUpdate ? "Update Role" : "Add New Role";
}
<h1>@title</h1>
<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Name" class="form-label"></label>
                <input asp-for="Input.Name" class="form-control"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="IsUpdate"/>
            <input type="hidden" asp-for="Input.Id" />

            <button type="submit"
                class="btn btn-primary"
                asp-page-handler="Save">
                @btnText
            </button>
            <a class="btn btn-primary" asp-page="./Index">Back To Role List</a>
        </form>
    </div>
</div>